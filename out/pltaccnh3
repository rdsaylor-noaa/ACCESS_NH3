        hbox.Add(exitButton,flag=wx.LEFT|wx.BOTTOM, border=5)
        self.Bind(wx.EVT_BUTTON, self.OnClickExit, exitButton)

        vbox.Add(hbox, flag=wx.ALIGN_LEFT|wx.LEFT, border=10)

        self.SetSizer(vbox)

